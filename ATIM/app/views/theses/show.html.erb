                                          <%= f.text_field :description, :placeholder => 'Description' %>
                                        </div>
                                        <div class="actions">
                                          <%= f.submit "Enviar", class: "btn"%>
                                        </div>
                                    <% end %>
                                  </tr>
                                </table>
                              </div>










                                <div class="tab-pane" id="tab8">
