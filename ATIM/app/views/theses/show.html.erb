                                                  <tr>

                                                    <td><%= commitment.title %></td>
                                                    <td><%= commitment.description %></td>
                                                    <td><%= commitment.due_date %></td>
                                                    <td><%= commitment.done %></td>

                                                  </tr>
                                              <% end %>
                                          <% end %>



                                        </table>
                                      </td>

                                    </tr>
